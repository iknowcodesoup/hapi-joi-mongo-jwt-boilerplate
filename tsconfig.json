{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [ "ESNext" ],
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "removeComments": true,
    "noLib": false,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./dist/",
    "allowJs": false,
    "types": [
      "node"
    ],
    "typeRoots": [
      "src/modules",
      "node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "models/*": [ "src/models/*" ],
      "routes/*": [ "src/routes/*" ]
    }
  },
  "compileOnSave": true,
  "buildOnSave": false,
  "exclude": [
    "dist"
  ]
}
